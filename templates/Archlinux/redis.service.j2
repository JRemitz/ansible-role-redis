[Unit]
Description=Advanced key-value store
After=network.target

[Service]
Type=simple
User={{ redis_svc_user }}
Group={{ redis_svc_group }}
ExecStart=/usr/bin/redis-server /etc/{{ redis_daemon }}.conf
ExecStop=/usr/bin/redis-cli shutdown
CapabilityBoundingSet=
PrivateTmp=true
PrivateDevices=true
ProtectSystem=full
ProtectHome=true
NoNewPrivileges=true
RuntimeDirectory={{ redis_data_dir }}
RuntimeDirectoryMode=755
LimitNOFILE=10032

[Install]
WantedBy=multi-user.target

